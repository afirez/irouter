<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:id="@+id/svList"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="0dp"
            android:layout_width="0dp">

        <LinearLayout
                android:id="@+id/llList"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv00Init"
                    android:text="0、IRouter Init"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv01Activity"
                    android:text="1、Activity without Arg"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv02Activity"
                    android:text="2、Activity with Arg"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv03Activity"
                    android:text="3、Activity for Result"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv04Activity"
                    android:text="4、Activity by path"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv05Fragment"
                    android:text="5、Fragment"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv06Provider"
                    android:text="6、Provider"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv07Interceptor"
                    android:text="7、Interceptor"
                    style="@style/textView_button"/>

            <TextView
                    android:id="@+id/tv08AppLike"
                    android:text="8、AppLike"
                    style="@style/textView_button"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>